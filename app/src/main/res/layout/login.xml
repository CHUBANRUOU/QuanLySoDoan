<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:background="#eeeeee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imganh"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/imganh"
            android:text="UTE"
            android:textColor="#3366FF"
            android:textSize="50sp"
            android:textStyle="bold" />
        <View
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/imganh"
            android:layout_below="@+id/tvten"
            android:background="#3366FF"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvten"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imganh"
            android:text="Đại Học Sư Phạm Kĩ Thuật"
            android:textColor="#ff3366"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập "
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:textSize="40sp"
            android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <EditText
        android:id="@+id/edttk"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:hint="Tên đăng nhập"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:background="@drawable/duongvien_gocbotron"

        />
        <EditText
            android:id="@+id/edtmk"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint="Mật khẩu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"

            android:background="@drawable/duongvien_gocbotron"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Ghi nhớ tài khoản"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUÊN MẬT KHẨU ?"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="250dp"/>
        <Button
            android:id="@+id/btndn"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="Đăng nhập "
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#00CCFF"/>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>